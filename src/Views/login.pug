extends layout

block content
    .h4 Login
        form(method="POST" action="/login")
            .form-group
                label(for='inputUsername') Username
                input#inputUsername.form-control(type='username', aria-describedby='emailHelp', placeholder='Enter email')
            .form-group
                label(for='exampleInputPassword1') Password
                input#exampleInputPassword1.form-control(type='password', placeholder='Password')
            .form-check
                input#exampleCheck1.form-check-input(type='checkbox')
                label.form-check-label(for='exampleCheck1') Check me out
            button.btn.btn-primary(type='submit') Login
